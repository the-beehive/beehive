<section class="thx-order">
  <h3>Order Invoice</h3>
</section>
<section class="cart-content">
  <% @order.order_items.each do |o| %>
    <div class="content-container">
      <div class="item-img">
        <% img = o.product.images.first %>
        <% if img %>
          <%= image_tag img.uploaded_file, width: 150, height: 150 %>
        <% else %>
          <p>Image Not Available</p>
        <% end %>
      </div>
      <div class="hex-fabric">
        <div class="hexagon"></div>
        <p><%= image_tag o.fabric_design_url, width: 100, height: 100, :class => "hexagon-thumb" %></p>
        <% o.product_id %>
        <% o.order_id %>
      </div>
      <div class="item-details">
        <h4><%= o.name %></h4>
        <h5><%= number_to_currency(o.unit_price, unit: "$") %></h5>
        <p>Shipping: <%= number_to_currency(o.shipping, unit: "$") %></p>
        <p>Quantity: <%= o.quantity %>
        <p>Ordered On: <%= o.created_at.strftime("%m/%d/%Y at %I:%M%p") %></p>
        <p>Status: <%= o.order_item_status %> </p>
      </div>
    </div>
    <% end %>
  <h4>Order Summary</h4>
  <ul class="cart-summary">
    <li><p>Total:</p></li>
    <li class="order-total">
      <%= number_to_currency(@order.total) %>
    </li>
  </ul>
  <div class="thx-order">
  <%= link_to 'Return home', user_path(current_user) %>
  </div>
</section>
