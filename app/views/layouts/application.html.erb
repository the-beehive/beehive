<!DOCTYPE html>
<html>
<head>
  <title>Beehive</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
    <nav>
      <div>
        <div>
          <ul>
          <% if current_user %>
            <li>Signed in with <%= current_user.provider %> as <%= current_user.name %></li>
            <li><%= link_to "Sign Out", 'sign_out', method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign In With Facebook', "/auth/facebook" %></li>
            <li><%= link_to 'Sign In With Twitter', "/auth/twitter" %></li>
          <% end %>
        </div>
      </div>
    </nav>
  </div>

<%= yield %>

</body>
</html>
