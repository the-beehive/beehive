<section class="hex-grid">
  <ul id="hex-products" class="">
    <% @products.each do |product| %>
    <li>
      <div>
        <tr>
          <% product.images.each do |image|%>
            <%= image_tag(image.image_url, :width => 200, :height => 200) %>
              <% end %>
        </tr>
        <h3><%=product.name%></h3>
        <p><%=product.description%></p>
      </div>
    </li>
    <% end %>
  </ul>
</section>
