<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>User Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Yardage</th>
      <th>Fabric type</th>
      <th>Shipping</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.user_id %></td>
        <td><% product.images.each do |image|%>
          <%= image_tag(image.image_url, :width => 100, :height => 100) %>
            <% end %>
        </td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.yardage %></td>
        <td><%= product.fabric_type %></td>
        <td><%= product.shipping %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

