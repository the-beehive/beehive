<section class="hex-grid">
  <ul id="hex-products" class="clr" >

    <% @products.each do |product| %>

      <li class="hex-container" onclick="location.href='<%= product_path(product) %>';">
        <div>
          <tr>
            <% product.images.each do |image|%>
              <%= image_tag(image.uploaded_file, :width => 200, :height => 200) %>
            <% end %>
          </tr>
          <h3><%=product.name%></h3>
          <p><%=product.description%></p>

        </div>
      </li>
    <% end %>

  </ul>
</section>

<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @products.each do |product| %>
      <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
  </div>
</div>
