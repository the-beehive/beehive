<%= form_for(@product, {url: products_path, html: { multipart: true }}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <input placeholder="Product name"<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <textarea placeholder="Tell us about it! Dimensions, material, etc."<%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :yardage %><br>
    <input placeholder="How much fabric will you need?"<%= f.number_field :yardage %>
  </div>
  <div class="field">
    <%= f.label :fabric_type %><br>
    <input placeholder="What type of fabric will you need?"<%= f.text_field :fabric_type %>
  </div>
  <div class="field">
    <%= f.label :shipping %><br>
    <input placeholder="How much will shipping cost?"<%= f.text_field :shipping %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <input placeholder="How much will this product cost?"<%= f.text_field :price %>
  </div>
  <div class="field">
    <table>
      <th>
        <%= f.label "Images" %>
      </th>
      <tbody>
        <% @product.images.each do |i| %>
        <tr>
          <td><%= image_tag i.uploaded_file, :width => 400, :height => 400 %></td>
          <td><%= link_to 'Show', i %></td>
          <td><%= link_to 'Edit', edit_image_path(i) %></td>
          <td><%= link_to 'Destroy', i, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="field">
    <%= label_tag :image, "Upload product images:" %>
    <%= file_field_tag :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
