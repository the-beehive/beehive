<section class="grid-row product-overview">
  <div class="col-2-3">
    <% @product.images.each do |image|%>
      <%= image_tag(image.uploaded_file, :width => 550, :height => 550) %>
    <% end %>
  </div>
  <div class="col-1-3">
    <h2>
      <%= @product.name %>
    </h2>
    <h3>
      $<%= (number_with_precision(@product.price, :precision => 2)) %>
    </h3>
    <div class="seller-details">Seller photo and name</div>
    <h4>Description</h4>
      <p><%= @product.description %></p>
    <p>
      <strong>Fabric type:</strong>
      <%= @product.fabric_type %>
    </p>
    <p>
      <strong>Shipping:</strong>
      $<%= (number_with_precision(@product.shipping, :precision => 2)) %>
    </p>
  </div>
</section>


  <button class="add-cart"><%= link_to "Add to Cart", carts_path(id: @product.id, design: "not the bees!"), method: :post %></button>

  <!-- <button class="add-cart">Add to cart</button> -->
</section>
<section class="grid-row more-seller">
  <div class="col-3-3">More from this seller</div>
</section>

<p>
  <strong>Price:</strong>
  $<%= (number_with_precision(@product.price, :precision => 2)) %>
</p>
