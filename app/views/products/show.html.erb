<p id="notice"><%= notice %></p>

<section class="grid-row product-overview">
  <div class="col-2-3">
    <% @product.images.each do |image|%>
      <%= image_tag(image.uploaded_file, :width => 400, :height => 400) %>
    <% end %>
  </div>
  <div class="col-1-3">
    <h2>
      <%= @product.name %>
    </h2>
    <p><%= @product.description %></p>
      <strong>Fabric type:</strong>
      <%= @product.fabric_type %>
    </p>
    <p>
      <p>
        $<%= (number_with_precision(@product.price, :precision => 2)) %>
      </p>
      <strong>Shipping:</strong>
      $<%= (number_with_precision(@product.shipping, :precision => 2)) %>
    </p>
  </div>
</section>
<section class="grid-row sf-fabric">
  <div class="col-3-3">
    <%= form_tag product_path, :method => 'get' do %>
      <%= label_tag(:q, "Customize fabric: ") %>
      <table>
      <tr>
        <td><%= text_field_tag :search, params[:search], :placeholder => 'Enter search term...', class: "form-control" %></td>
        <td><%= submit_tag "Search", :name => nil %></td>
      </tr>
    </table>
    <% end %>
  </div>
  </br>

  <% if params[:search] == "" || params[:search] == nil %>
    <%= render plain: "Or choose from these popular fabric designs: " %></br></br>
  <% end %>

  <%= render :partial => 'fabric' %>
</section>
<section class="grid-row more-seller">
  <div class="col-3-3">More from this seller</div>
</section>













